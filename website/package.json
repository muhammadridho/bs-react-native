{
  "private": true,
  "name": "bs-react-native-website",
  "version": "0.0.0",
  "scripts": {
    "re:clean": "bsb -clean-world",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "svg:cleanup": "trash src/SVGs/components",
    "svg:convert": "node scripts/SvgToReact.bs.js",
    "svg:format": "find src/SVGs/components -name \"*.re\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "svg": "yarn svg:cleanup && yarn svg:convert && yarn svg:format",
    "build:prepare:odoc": "trash build/odoc-html && ./scripts/odoc-to-html.sh && trash build/odoc && node scripts/PrepareOdocHtmlToJson.bs.js",
    "build:prepare:md": "trash build/md && node scripts/PrepareMdToJson.bs.js",
    "build:prepare": "yarn build:prepare:odoc && yarn build:prepare:md",
    "build:prerender-legacy": "./scripts/legacy-doc.sh",
    "build:prerender": "node scripts/BuildWebsite.entry.js",
    "build:copy-static": "cpy \"public/**/*\" dist",
    "build": "yarn re:build && yarn svg && yarn build:prepare && yarn build:prerender && yarn build:prerender-legacy && yarn build:copy-static",
    "serve": "serve dist",
    "test": "yarn build"
  },
  "devDependencies": {
    "bs-platform": "^5.0.0",
    "cpy-cli": "^2.0.0",
    "front-matter": "^3.0.1",
    "glob": "^7.1.3",
    "highlight.js": "^9.15.6",
    "mkdirp": "^0.5.1",
    "module-alias": "^2.2.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-native-web": "^0.11.2",
    "reason-future": "^2.4.0",
    "reason-highlightjs": "^0.2.0",
    "reason-react": "https://github.com/reasonml/reason-react.git#0b4140c",
    "remarkable": "^1.7.1",
    "serve": "^10.1.2",
    "trash-cli": "^1.4.0"
  }
}
